    {
      "name": "Ingredient Management",
      "item": [
        {
          "name": "Create Ingredient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomato\",\n  \"description\": \"Fresh red tomatoes\",\n  \"unit\": \"kg\",\n  \"initialStock\": 50.0,\n  \"minStockLevel\": 10.0,\n  \"maxStockLevel\": 100.0,\n  \"expiryDate\": \"2024-12-31\",\n  \"supplierName\": \"Fresh Farm Co.\",\n  \"supplierContact\": \"+84 123 456 789\",\n  \"unitCost\": 15000.0,\n  \"currency\": \"VND\",\n  \"category\": \"Vegetables\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/inventory/ingredient",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "ingredient"]
            }
          }
        },
        {
          "name": "Get All Ingredients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/inventory/ingredient?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "ingredient"],
